#define echoPin 8
#define trigPin 9
long tiempo_de_respuesta, cm, inches;

void setup() {

  Serial.begin (9600);
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
}

void loop() {

  digitalWrite(trigPin, LOW);
  delayMicroseconds(5);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  pinMode(echoPin, INPUT);
  tiempo_de_respuesta = pulseIn(echoPin, HIGH);

  // Convertia de tiempo a distancia
  cm = (tiempo_de_respuesta/2) / 29.1;     // Para centimetros divide por 29.1 o multiplica por 0.0343
  inches = (tiempo_de_respuesta/2) / 74;   // Para pulgadas divide por 74 o multiplica por 0.0135

  Serial.print(inches);
  Serial.print("in, ");
  Serial.print(cm);
  Serial.print("cm");
  Serial.println();

  delay(250);
}
