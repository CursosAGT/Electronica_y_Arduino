int pin =  0;
void setup()
 {
  for (pin=0;pin<=5; pin++)
  {
    pinMode(led[pin],OUTPUT);
  }
  Serial.begin(9600);
}

void loop()
{
  for (pin=0;pin<=5; pin++)
  {
    digitalWrite (led[pin],HIGH);
    delay(demora);
    digitalWrite (led[pin],LOW);
    delay(demora);
    Serial.print(" lugar de array  : ");
    Serial.println(pin);
    Serial.print(" pin del board  : ");
    Serial.print(led[pin]);
    Serial.println("      ");
  }
}
